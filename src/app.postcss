/* Write your global styles here, in PostCSS syntax */

@tailwind base;

:root {
  font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;
  line-height: 1.5;
  font-weight: 400;

  color-scheme: light dark;
  
  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  -webkit-text-size-adjust: 100%;

  --primary: '#7E2A9F'
  --primary-50:'#F8E4F6', 
  --primary-100: #F2CCF0;
  --primary-200: #E29CE5;
  --primary-300: #CB6CD8;
  --primary-400: #AE3BCB;
  --primary-500: #7E2A9F;
  --primary-600: #602383;
  --primary-700: #451B66;
  --primary-800: #2D144A;
  --primary-900: #190C2E;
}

.fill {
  width: 100%;
  height: 100%;
}

@tailwind components;

@tailwind utilities;
